{
  "lexicon": 1,
  "id": "sh.weaver.blog.defs",
  "defs": {
    "postView" :{
      "type": "object",
      "required": ["uri", "cid", "author", "record", "indexedAt"],
      "authors": {
        "type": "array",
        "items": {
          "type": "union",
          "refs": ["app.bsky.actor.defs#profileViewBasic" ] // add own lexicon for this
        }
      },
      "properties": {
        "uri": { "type": "string", "format": "at-uri" },
        "cid": { "type": "string", "format": "cid" },
      },

      "record": { "type": "unknown" },
      "renderedView": {
        "type": "ref",
        "ref": "#renderedView"
      },
      "indexedAt": { "type": "string", "format": "datetime" },
    },

    "renderedView": {
      "type": "object",
      "required": ["html"],
      "properties": {
        "html": {
          "type": "blob",
          "accept": ["text/html"],
          "maxSize": 1000000
        },
        "css": {
          "type": "blob",
          "accept": ["text/css"],
          "maxSize": 1000000
        },
      },
      "description": "View of a rendered and cached blog post"
    },
  }
}
